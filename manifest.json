{
  "manifest_version": 3,
  "name": "Website Time Tracker",
  "description": "Tracks time spent on websites and provides productivity analytics",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
